<UserControl x:Class="TDDD49.Views.AcceptDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TDDD49.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="{StaticResource PrimaryBrush}">

      <Label Content="{Binding IP, Mode=OneTime}"/>

      <Label Content="{Binding Username, Mode=OneTime}"/>
      
      <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="5">
        <Button Content="Accept" Width="50" IsDefault="True" Margin="0,0,5,0"/>
        <Button Width="50" IsCancel="True" Content="Decline"/>
      </StackPanel>
    </StackPanel>
</UserControl>
